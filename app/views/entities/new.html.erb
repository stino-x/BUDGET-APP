<div class="register-container">
  <%= form_with model: @entity, url: group_entities_path(@group) do |form| %>
    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name, required: true, class: "form-control" %>
    </div>

    <div>
      <%= form.label :amount, style: "display: block" %>
      <%= form.number_field :amount, required: true, class: "form-control" %>
    </div>

    <div>
      <%= form.submit "Add transaction", class: "submit-btn" %>
    </div>
  <% end %>
  <%= link_to "Back", group_entities_path(@group), class: 'categories-button' %>
</div>
