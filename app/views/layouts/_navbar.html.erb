<header class="header">
  <% if user_signed_in? %>
    <div class="nav">
      <% if @page == 'CATEGORIES' %>
        <i class="fa-solid fa-bars"></i>
      <% else %>
        <a href=<%= groups_path %> class="signup-btn"><i class="fa-solid fa-arrow-left"></i></i></a>
      <% end %>
      <h1 class="group_name"><%= @page %></h1>
      <%= button_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-so' %>
    </div>
  <% else %>
    <div class="nav-2">
      <h1>REGISTER</h1>
    </div>
  <% end %>
</header>